<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:paddingLeft="20sp"
    android:paddingTop="25sp"
    
    >
    <TextView 
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_round_textview"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="36sp"
                    android:textColor="@color/color_white"
        />
    <LinearLayout 
        android:paddingLeft="20sp"
         android:layout_width="210sp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        >
         <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/illegal_action_title_1"
              android:textSize="18sp"
             />
         <TextView 
              android:layout_width="140sp"
              android:layout_height="wrap_content"
              android:text="@string/illegal_action_content_1"
              android:textColor="@color/color_grey"
             />
        
    </LinearLayout>
    
    <RadioButton 
        android:id="@+id/rb_illegal_action_select_1"
         android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="right"
              android:text="@string/illegal_action_title_select_ok"
              android:textSize="12sp"
        />
</LinearLayout>
